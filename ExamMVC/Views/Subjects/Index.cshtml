@model IEnumerable<DomainModels.Models.ExamModel.Subject>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubjectName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Class)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherLastName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubjectName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherFirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeacherLastName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SubjectCode">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SubjectCode">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SubjectCode">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
